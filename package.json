{
  "name": "threejs-boilerplate",
  "version": "1.0.0",
  "description": "A Threejs Boilerplate to aid in quick prototyping",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "prestart": "npm run clean",
    "start": "nodemon app.js",
    "start:bs": "browser-sync start --proxy 'localhost:3000' --files 'public/**/*.*'",
    "prebuild": "npm run clean",
    "build": "node build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sean-Bradley/Threejs-Boilerplate.git"
  },
  "keywords": [
    "threejs",
    "boilerplate",
    "threejs boilerplate"
  ],
  "author": "Sean Bradley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sean-Bradley/Threejs-Boilerplate/issues"
  },
  "homepage": "https://github.com/Sean-Bradley/Threejs-Boilerplate#readme",
  "dependencies": {
    "express": "^4.18.2",
    "three": "^0.164.1"
  },
  "alias": {
    "three": "./node_modules/three/build/three.module.js",
    "OrbitControls": "./node_modules/three/examples/jsm/controls/OrbitControls.js"
  },
  "devDependencies": {
    "@parcel/transformer-glsl": "^2.9.3",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "parcel": "^2.0.0-rc.0",
    "parcel-bundler": "^1.12.5",
    "rimraf": "^5.0.6"
  },
  "main": "app.js",
  "directories": {
    "doc": "docs"
  }
}
